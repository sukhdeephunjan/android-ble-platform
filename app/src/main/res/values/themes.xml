<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.ComposeApp" parent="android:Theme.Material.Light.NoActionBar" />
    <style name="Theme.ComposeApp.Splash" parent="Theme.SplashScreen">
        <!-- Splash screen background color -->
        <item name="windowSplashScreenBackground">@color/splash_bg</item>
        <!-- Animated icon (optional, e.g., app logo) -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_background</item>
        <!-- Optional: Set text color or other elements for splash screen -->
        <item name="android:windowBackground">@color/splash_bg</item>
        <item name="postSplashScreenTheme">@style/Theme.ComposeApp</item>
    </style>

</resources>